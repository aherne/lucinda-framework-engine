<xml>
    <application>
        <default_page>index</default_page>
        <default_format>html</default_format>
        <auto_routing>0</auto_routing>
    </application>
    <routes>
        <route url="login"/>
        <route url="login/facebook"/>
        <route url="index"/>
        <route url="logout"/>
        <route url="private"/>
        <route url="missing"/>
    </routes>
    <formats>
        <format name="html" content_type="text/html" charset="UTF-8"/>
    </formats>
    <security dao_path="dao">
        <csrf secret="asdf"/>
        <persistence>
            <synchronizer_token secret="rrwe"/>
        </persistence>
        <authentication>
            <oauth2 dao="UsersOAuth2Authentication">
                <driver name="Facebook" callback="login/facebook" client_id="MY_CLIENT" client_secret="MY_SECRET" scopes="user_photos"/>
            </oauth2>
        </authentication>
        <authorization>
			<by_dao page_dao="PageAuthorization" user_dao="UserAuthorization"/>
        </authorization>
    </security>
</xml>